#This project was developed by Tech with Tim on youtube
print("Welcome to my very first computer quiz!")
playing = input("Would you like to play? ")
if playing.lower() != "yes":
    quit()
print("Alright! Let's play.")
score = 0

answer = input("1. What does CPU stand for? ")
if answer.lower() == "central processing unit":
    print("Correct!")
    score +=1
else:
    print("Incorrect! The answer is 'central processing unit'")

answer = input("What does GPU stand for? ")
if answer.lower() == "graphic processing unit":
    print("Correct!")
    score +=1
else:
    print("Incorrect! GPU stands for graphic processing unit")

answer = input("What does RAM stand for? ")
if answer.lower() == "random access memory":
    print("Correct!")
    score +=1
else:
    print("Incorrect! The answer is 'random access memory'")

answer = input("What does PSU stand for? ")
if answer.lower() == "power suply":
    print("Correct! You did great :)")
    score +=1
else:
    print ("Incorrect! PSU stands for 'power suply'")

print(f"Thank for playing! Here's your final score: {score}")
